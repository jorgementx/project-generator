{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Docker Compose",
      "type": "shell",
      "command": "docker compose up -d",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Sync Python Dependencies",
      "type": "shell",
      "command": "uv sync",
      "options": {
        "cwd": "${workspaceFolder}/django_proj"
      },
      "problemMatcher": []
    },
        {
      "label": "Create Django Superuser",
      "type": "shell",
      "command": "uv run manage.py createsuperuser",
      "options": {
        "cwd": "${workspaceFolder}/django_proj"
      },
      "problemMatcher": []
    },
    {
      "label": "Make Django Migrations",
      "type": "shell",
      "command": "uv run manage.py makemigrations",
      "options": {
        "cwd": "${workspaceFolder}/django_proj"
      },
      "problemMatcher": []
    },
    {
      "label": "Apply Django Migrations",
      "type": "shell",
      "command": "uv run manage.py migrate",
      "options": {
        "cwd": "${workspaceFolder}/django_proj"
      },
      "problemMatcher": []
    },
  ]
}
