{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Docker Compose",
      "type": "shell",
      "command": "docker compose up -d",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Sync Python Dependencies",
      "type": "shell",
      "command": "uv sync",
      "options": {
        "cwd": "${workspaceFolder}/django_proj"
      },
      "problemMatcher": []
    }
  ]
}
