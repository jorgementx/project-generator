services:
  postgresql:
    image: postgres:{{ postgres_version }}
    ports:
    - "5432:5432"
    environment:
    - "POSTGRES_USER={{ db_user }}"
    - "POSTGRES_PASSWORD={{ db_password }}"
    - "POSTGRES_DB={{ project_slug }}"
    - "PGDATA=/var/lib/postgresql/data/pgdata"
    volumes:
      - {{ project_slug }}-dev:/var/lib/postgresql/data/pgdata

volumes:
    {{ project_slug }}-dev:

